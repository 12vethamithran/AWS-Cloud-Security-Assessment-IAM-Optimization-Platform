# AWS Credentials Configuration
# Replace the placeholder values with your actual AWS credentials

# Required: AWS Access Key ID
# Get this from AWS IAM Console -> Users -> Security Credentials -> Create access key
AWS_ACCESS_KEY_ID= Your AWS Access key ID

# Required: AWS Secret Access Key
# This is shown only once when you create the access key - save it securely
AWS_SECRET_ACCESS_KEY= Your AWS Secret Key

# Required: AWS Region
# Common regions: us-east-1, us-west-2, eu-west-1, ap-south-1, ap-southeast-1
AWS_REGION=eu-north-1

# Optional: Analysis Configuration
# Number of hours to look back for CloudTrail logs (default: 24)
ANALYSIS_HOURS_BACK=24

# Maximum number of events to collect from CloudTrail (default: 2000)
MAX_EVENTS_TO_COLLECT=2000

# Auto-start dashboard after analysis (true/false)
AUTO_START_DASHBOARD=false

# Optional: Risk Thresholds
# Risk scores above these values will trigger respective risk levels
CRITICAL_RISK_THRESHOLD=80
HIGH_RISK_THRESHOLD=60
MEDIUM_RISK_THRESHOLD=30

# Optional: Dashboard Configuration
# Port number for the web dashboard (default: 8080)
DASHBOARD_PORT=8080

# Automatically open browser when dashboard starts (true/false)
AUTO_OPEN_BROWSER=true

# Optional: Alert Configuration
# Enable email alerts for critical findings (true/false)
ENABLE_EMAIL_ALERTS=false

# Email address to receive security alerts
ALERT_EMAIL=security@example.com

# Optional: Data Retention
# Number of days to keep historical logs
KEEP_LOGS_DAYS=30

# Archive old analysis data (true/false)
ARCHIVE_OLD_DATA=true
